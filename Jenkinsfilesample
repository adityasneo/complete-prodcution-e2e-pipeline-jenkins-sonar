
pipeline{
    agent any
    tools {
        jdk 'openjdk 17.0.9'
        maven 'Maven3'
    }
    stages {
        stage("Cleanup Workspace") {
            steps {
                script {
                    cleanWs()
                }
            }
        }

        stage("Checkout Code") {
            steps {
                script {
                    git branch: 'main', credentialsId: 'github', url: 'https://github.com/lellaaditya/complete-prodcution-e2e-pipeline.git'
                }
            }        
        }

        stage("Build Application") {
            steps {
                script {
                    sh "mvn clean package"
                }
            }        
        }

        stage("Test Application"){
            steps {
                sh "mvn test"
            }
         }
    }
}
